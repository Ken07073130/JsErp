        function clickTr(currTrIndex){ 
		    var prevTrIndex = $("#prevTrIndex").val(); 
		    if (currTrIndex > -1){ 
			    $("#tr_" + currTrIndex).addClass("hover"); 
		    } 
		    $("#tr_" + prevTrIndex).removeClass("hover"); 
		    $("#prevTrIndex").val(currTrIndex); 
