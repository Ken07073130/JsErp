      function getXqWlxx(){
            $('#wlxx tbody tr').empty();
            var data = "{'wlxx':{'Ckbh':'1501','Wlbh':'"+ $("#tbWlbh").val() +"','Wlmc':'"+ $("#tbWlmc").val() +"','Gg':'ddhg','Wlpc':'"+ "" +"','Sl':'1','Dw':'pcs','Gys':'"+$("#tbGysdm").val()+"'}}";
